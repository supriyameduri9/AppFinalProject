<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pocketnews_277">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PocketNews277">
        <activity android:name=".viewmodel.HomepageActivity" android:theme="@style/FullPageTheme"></activity>
        <activity android:name=".viewmodel.SignUp" android:theme="@style/FullPageTheme" />
        <activity android:name=".viewmodel.Login" android:theme="@style/FullPageTheme"/>
        <activity android:name=".MainActivity" android:theme="@style/FullPageTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>