<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="20dp"
        android:paddingTop="50dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="79dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/allowNotifySwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allow Notifications"
        android:textAlignment="textStart"
        android:textOff="Off"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:textOn="On"
        android:paddingEnd="20dp"
        android:textSize="16sp"
        app:showText="true"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <RadioButton
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/allNewsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="2dp"
                android:padding="10dp"
                android:text="All News"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/positiveNewsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:text="Uplifting News"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

        </RadioGroup>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#000000"
        android:fontFamily="sans-serif-medium"
        android:padding="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@drawable/text_color"
        android:textColorHint="@drawable/text_color"
        android:textSize="18sp"
        android:textStyle="normal" />

</LinearLayout>